 author = "Bhattacharjee, Srijit and Sarkar, Subhodeep and Bhattacharyya, Arpan",
 title = {<a href="https://doi.org/10.1103/PhysRevD.103.024008">Scalar perturbations of black holes in Jackiw-Teitelboim gravity</a>},
